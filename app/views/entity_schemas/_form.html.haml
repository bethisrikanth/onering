= semantic_nested_form_for @entity_schema, :html => {:class => 'well'} do |f|
  - if @entity_schema.new?
    = f.input :name, :as => :select, :collection => EntitySchema.list_models_without_schema
  - else
    = f.input :name, :input_html => { :disabled => true }
  = f.semantic_fields_for :entity_attributes do |attributes_form| 
    = attributes_form.input :name
    = attributes_form.input :type, :as => :select, :collection => EntityAttribute.list_types
    = attributes_form.link_to_remove "Remove this attributes", :class => 'btn btn-danger'
  = f.link_to_add "Add attribute", :entity_attributes, :class => 'btn'
  = f.buttons do
    = f.commit_button :button_html => {:class => 'btn btn-primary'}, :label => 'Save'
