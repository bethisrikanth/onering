= semantic_form_for @admin_user, :html => {:class => 'well'} do |f|
  -if @admin_user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@admin_user.errors.count, "error")} prohibited this user from being saved:"
      %ul 
        - @admin_user.errors.full_messages.each do |msg|
          %li= msg 
  %p
    %b Username:
    = @admin_user.username
  = f.input :can_write, as: :boolean
  = f.buttons do
    = f.commit_button :button_html => {:class => 'btn btn-primary'}, :label => 'Save'
