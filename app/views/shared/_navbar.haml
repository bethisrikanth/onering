.navbar.navbar-fixed-top{"data-dropdown" => "dropdown"}
  .navbar-inner
    .container
      %a.brand{:href => "/"} one ring
      %ul.nav
        %li= link_to 'Datacenters', datacenters_path
        %li= link_to 'Racks', physical_racks_path
        %li= link_to 'Physical Hosts', physical_hosts_path
        %li= link_to "IP Blocks", ip_blocks_path
        %li= link_to "Schemas", entity_schemas_path
        %li= link_to 'Worklog', worklogs_path
        %li= link_to 'Audit', audits_path
      %form.navbar-search.pull-left{:action => "/search"}
        %input.search-query{:name => :q, :placeholder => "Search", :type => "text", :value => "#{params[:q]}"}
      %ul.nav.pull-right
        %li= link_to "Settings", settings_path
        %li= link_to "Users", admin_users_path
        %li.dropdown
          %a.dropdown-toggle{href: "#", "data-toggle" => 'dropdown'} 
            Hello
            = current_admin_user ? current_admin_user.username : 'Stranger'
            - if admin_user_signed_in?
              %b.caret &nbsp;
          - if admin_user_signed_in?
            %ul.dropdown-menu
              %li
                = link_to("Logout", destroy_admin_user_session_path, :method => :delete)