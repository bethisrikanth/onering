= form_for @ip_block do |f|
  -if @ip_block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ip_block.errors.count, "error")} prohibited this ip_block from being saved:"
      %ul
        - @ip_block.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :base
    = f.number_field :base
  .field
    = f.label :mask
    = f.number_field :mask
  .actions
    = f.submit 'Save'
