%p#notice= notice

%p
  %b Name:
  = best_in_place @physical_host, :name
%p
  %b N:
  = best_in_place @physical_host, :n
%p
  %b U:
  = best_in_place @physical_host, :u
%p
  %b Type:
  = best_in_place @physical_host, :type
%p
  %b Serial:
  = best_in_place @physical_host, :serial
%p
  %b PDU1:
  = best_in_place @physical_host, :pdu1
%p
  %b PDU2:
  = best_in_place @physical_host, :pdu2
%p
  %b MAC:
  = best_in_place @physical_host, :mac
%p
  %b Notes:
  = best_in_place @physical_host, :notes
%p
  %b Power Consumption
  = best_in_place @physical_host, :power_consumption
%p
  %b Rack:
  = best_in_place @physical_host, :physical_rack, :type => :select, :collection => PhysicalRack::list_options, :nil => 'Select Rack', :display_as => :id
