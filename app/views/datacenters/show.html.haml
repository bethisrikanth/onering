%p#notice= notice

%p
  %b Datacenter Name:
  %em= best_in_place @datacenter, :name
%p 
  %b Racks:
  %table.table.table-striped.table-bordered.table-condensed
    %tr
      %th Index
      %th Name
      %th Hosts

    - @datacenter.physical_racks.each do |physical_rack|
      %tr
        %td= link_to physical_rack.index, physical_rack
        %td= link_to physical_rack.name, physical_rack
        %td
          %table.table.table-striped.table-bordered.table-condensed
            %tr
              %th Name
              %th N
              %th U

            - physical_rack.physical_hosts.each do |physical_host|
              %tr
                %td= link_to physical_host.name, physical_host
                %td= physical_host.n
                %td= physical_host.u


= link_to datacenters_path, :class => 'btn' do
  %i.icon-th-list.icon-black
  All Datacenters
= link_to edit_datacenter_path, :class => 'btn btn-info' do
  %i.icon-edit.icon-white
  Edit Datacenter
= link_to new_datacenter_path, :class => 'btn btn-primary' do
  %i.icon-plus.icon-white
  New Datacenter
