{% if device.properties.provisioning.network.dhcp %}
network --device eth0 --onboot yes --bootproto dhcp
{% else %}
network --device eth0 --onboot yes --bootproto static --ip {{ device.properties.provisioning.network.ip }} --netmask {{ device.properties.provisioning.network.netmask }} --gateway {{ device.properties.provisioning.network.gateway }} --nameserver {{ device.properties.provisioning.network.dns }}
{% endif %}
