# post: services

# configure NTP (pre-flight)
cat <<EOF_NTP >> /etc/ntp/step-tickers
0.centos.pool.ntp.org
1.centos.pool.ntp.org
2.centos.pool.ntp.org
EOF_NTP

# enable prerequisite services
/sbin/chkconfig crond on
/sbin/chkconfig ntpd on

# start prerequisite services
/sbin/service ntpd start
/sbin/service crond start

# install straphanger
/usr/bin/curl http://chefmaster.outbrain.com/boot/straphanger.tar.gz -o /tmp/straphanger.tar.gz

if [ -f /tmp/straphanger.tar.gz ]; then
  tar xf /tmp/straphanger.tar.gz -C /
  /sbin/chkconfig --add straphanger
fi