# post: chef

# install packages
/usr/bin/yum -y install gcc chef

mkdir /etc/chef
cd /etc/chef

/usr/bin/curl http://chefmaster.outbrain.com/boot/validation.pem -o /etc/chef/validation.pem
/usr/bin/curl http://chefmaster.outbrain.com/boot/client.rb -o /etc/chef/client.rb

cat <<EOF > /var/tmp/ob-roles.json
{ "run_list": [ "role[OB-Base]" ] }
EOF

# do initial chef run
chef-client -j /var/tmp/ob-roles.json